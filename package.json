{
  "name": "everforest-code-english-toggle",
  "displayName": "Everforest - Code/English Toggle",
  "description": "Comfortable & Pleasant Color Scheme for Visual Studio Code",
  "version": "0.1.0",
  "publisher": "aoweeks",
  "author": "sainnhe (https://github.com/sainnhe)",
  "homepage": "https://github.com/sainnhe/everforest-vscode",
  "repository": {
    "type": "git",
    "url": "https://github.com/aoweeks/everforest-vscode.git"
  },
  "bugs": {
    "url": "https://github.com/aoweeks/everforest-vscode/issues"
  },
  "license": "MIT",
  "keywords": [
    "green",
    "theme"
  ],
  "galleryBanner": {
    "color": "#2f383e",
    "theme": "dark"
  },
  "categories": [
    "Themes"
  ],
  "extensionKind": [
    "ui",
    "workspace"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    },
    "virtualWorkspaces": true
  },
  "main": "dist/index-client.js",
  "browser": "dist/index-web.js",
  "contributes": {
    "themes": [
      {
        "label": "Everforest Code",
        "uiTheme": "vs-dark",
        "path": "./themes/everforest-code.json"
      },
      {
        "label": "Everforest English",
        "uiTheme": "vs-dark",
        "path": "./themes/everforest-english.json"
      }
    ],
    "configuration": {
      "title": "Everforest",
      "properties": {
        "everforest-code-english-toggle.darkContrast": {
          "type": "string",
          "default": "hard",
          "description": "Background contrast for the dark variant.",
          "enum": [
            "soft",
            "medium",
            "hard"
          ]
        },
        "everforest-code-english-toggle.darkWorkbench": {
          "type": "string",
          "default": "material",
          "description": "Workbench style for the dark variant.",
          "enum": [
            "material",
            "flat",
            "high-contrast"
          ]
        },
        "everforest-code-english-toggle.darkCursor": {
          "type": "string",
          "default": "white",
          "description": "The cursor color in the dark variant.",
          "enum": [
            "white",
            "red",
            "orange",
            "yellow",
            "green",
            "aqua",
            "blue",
            "purple"
          ]
        },
        "everforest-code-english-toggle.darkSelection": {
          "type": "string",
          "default": "grey",
          "description": "The background color of selected text in the dark variant.",
          "enum": [
            "grey",
            "red",
            "orange",
            "yellow",
            "green",
            "aqua",
            "blue",
            "purple"
          ]
        },
        "everforest-code-english-toggle.lightSelection": {
          "type": "string",
          "default": "grey",
          "description": "The background color of selected text in the light variant.",
          "enum": [
            "grey",
            "red",
            "orange",
            "yellow",
            "green",
            "aqua",
            "blue",
            "purple"
          ]
        },
        "everforest-code-english-toggle.italicKeywords": {
          "type": "boolean",
          "default": false,
          "description": "Italicize keywords or not."
        },
        "everforest-code-english-toggle.italicComments": {
          "type": "boolean",
          "default": true,
          "description": "Italicize comments or not."
        },
        "everforest-code-english-toggle.diagnosticTextBackgroundOpacity": {
          "type": "string",
          "default": "0%",
          "markdownDescription": "The opacity of the background color of [diagnostic text](https://code.visualstudio.com/updates/v1_52#_error-background-colors).",
          "enum": [
            "0%",
            "12.5%",
            "25%",
            "37.5%",
            "50%"
          ]
        },
        "everforest-code-english-toggle.highContrast": {
          "type": "boolean",
          "default": false,
          "description": "Whether to add an additional border around items across the UI to increase the contrast."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "clean": "rimraf dist *.vsix",
    "compile:ts": "tsc",
    "compile:themes": "node dist/hook/generateThemes.js",
    "compile": "npm run clean && npm run compile:ts && npm run compile:themes",
    "package": "vsce package && git checkout -- themes",
    "lint": "eslint . --ext .ts",
    "browser": "vscode-test-web --browserType=chromium --extensionDevelopmentPath=. .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "eslint --fix",
    "*.{js,json,md}": "prettier --write"
  },
  "engines": {
    "vscode": "^1.55.0"
  },
  "devDependencies": {
    "@types/node": "18.11.14",
    "@types/vscode": "1.55.0",
    "@typescript-eslint/eslint-plugin": "5.46.1",
    "@typescript-eslint/parser": "5.46.1",
    "@vscode/test-web": "0.0.33",
    "@vscode/vsce": "^2.15.0",
    "eslint": "8.29.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "lint-staged": "13.1.0",
    "prettier": "2.8.1",
    "rimraf": "3.0.2",
    "typescript": "4.9.4"
  }
}
